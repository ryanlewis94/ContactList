<Window x:Class="ContactsList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsList"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="ContactList"
                  IsReadOnly="True"
                  SelectionChanged="ContactList_OnSelectionChanged"/>

        <StackPanel Grid.Column="1">
            <Label Content="First Name:"
                   FontSize="24"
                   Margin="5"></Label>
            <TextBox x:Name="TxtFirst"
                     Text="{Binding SelectedItem.FirstName, ElementName=ContactList}"
                     TextChanged="OnTextChanged"
                     FontSize="20"
                     Margin="5"></TextBox>
            <Label Content="Last Name:"
                   FontSize="24"
                   Margin="5"></Label>
            <TextBox x:Name="TxtLast"
                     Text="{Binding SelectedItem.LastName, ElementName=ContactList}"
                     TextChanged="OnTextChanged"
                     FontSize="20"
                     Margin="5"></TextBox>
            <Label Content="Phone:"
                   FontSize="24"
                   Margin="5"></Label>
            <TextBox x:Name="TxtPhone"
                     Text="{Binding SelectedItem.Phone, ElementName=ContactList}"
                     TextChanged="OnTextChanged"
                     FontSize="20"
                     Margin="5"></TextBox>
            <Label Content="Email:"
                   FontSize="24"
                   Margin="5"></Label>
            <TextBox x:Name="TxtEmail"
                     Text="{Binding SelectedItem.Email, ElementName=ContactList}"
                     TextChanged="OnTextChanged"
                     FontSize="20"
                     Margin="5"></TextBox>

            <Grid Margin="0, 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Name="AddBtn" 
                        Click="AddRecord" 
                        Content="Add" 
                        FontSize="24" 
                        Grid.Column="0"
                        Margin="5,5,5,0"
                        Height="36"
                        VerticalAlignment="Top"
                        IsEnabled="False"></Button>
                <Button x:Name="ClearBtn"
                        Content="Clear"
                        FontSize="24"
                        Grid.Column="1"
                        Margin="5,5,5,0"
                        Height="36"
                        VerticalAlignment="Top"
                        Click="ClearBtn_Click"></Button>
                <Button x:Name="DelBtn" 
                        Content="Delete"
                        FontSize="24"
                        Grid.Column="2"
                        Margin="5"
                        IsEnabled="False"
                        Click="DelBtn_Click"></Button>
            </Grid>
            <TextBox x:Name="TxtId"
                     Text="{Binding SelectedItem.Id, ElementName=ContactList}"
                     Visibility="Hidden"
                     TextChanged="OnTextChanged"
                     FontSize="20"
                     Margin="5" />


        </StackPanel>
        
    </Grid>
</Window>
